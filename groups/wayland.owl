@env QT_QPA_PLATFORM=wayland
@env WEZTERM_BACKEND=wayland
@env XDG_SESSION_TYPE=wayland
@env GDK_BACKEND=wayland
@env WINIT_UNIX_BACKEND=wayland

@pkg hyprland
:cfg hyprland/hyprland.conf -> ~/.config/hypr/hyprland.conf
:cfg hyprland/cursor.conf -> ~/.config/hypr/theme.conf

@pkg rofi
:cfg rofi/cursor -> ~/.config/rofi

@pkgs
grim
slurp
swaybg
waybar
wf-recorder
wl-clipboard
xdg-desktop-portal-hyprland
